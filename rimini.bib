	journal = {Econometrica},
	keywords = {Residential choice, endogenous amenities, urban inequality, gentrification, tourism, short‐term rentals},
	number = {3},
	pages = {1031-1071},
	title = {Location Sorting and Endogenous Amenities: Evidence from Amsterdam},
