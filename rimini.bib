	issn = {0094-1190},
	journal = {Journal of Urban Economics},
	keywords = {Amenities, Discrimination, Tourism},
	pages = {103773},
	title = {You can't sit with us: How locals and tourists compete for amenities in Paris},
	url = {https://www.sciencedirect.com/science/article/pii/S0094119025000385},
	volume = {148},
	year = {2025},
